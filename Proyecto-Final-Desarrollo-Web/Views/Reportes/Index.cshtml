@{
    ViewBag.Title = "Reportes - FarmaU";
}

<div class="container">
    <div class="row">
        <div class="col-md-12">
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a href="@Url.Action("Index", "Home")">Home</a></li>
                    <li class="breadcrumb-item active" aria-current="page">Reportes</li>
                </ol>
            </nav>

            <div class="card shadow-sm mb-4">
                <div class="card-header bg-primary text-white">
                    <div class="d-flex justify-content-between align-items-center">
                        <h4 class="mb-0"><i class="bi bi-clipboard-data me-2"></i>Gestión de Reportes</h4>
                    </div>
                </div>
                <div class="card-body">
                    <p class="mb-4">Selecciona el tipo de reporte que deseas visualizar:</p>

                    <div class="row g-3">
                        <div class="col-md-4">
                            <a href="@Url.Action("ReportesVentas", "Reportes")" class="btn btn-outline-primary w-100 d-flex align-items-center justify-content-center py-3">
                                <i class="bi bi-cash-stack me-2 fs-4"></i>
                                <span class="fw-semibold">Reporte de Ventas</span>
                            </a>
                        </div>
                        <div class="col-md-4">
                            <a href="@Url.Action("ReportesInventario", "Reportes")" class="btn btn-outline-success w-100 d-flex align-items-center justify-content-center py-3">
                                <i class="bi bi-boxes me-2 fs-4"></i>
                                <span class="fw-semibold">Reporte de Inventario</span>
                            </a>
                        </div>
                        
                        <div class="col-md-4">
                            <a href="#" class="btn btn-outline-secondary w-100 d-flex align-items-center justify-content-center py-3 disabled">
                                <i class="bi bi-bar-chart-line me-2 fs-4"></i>
                                <span class="fw-semibold">Otro Reporte (próximamente)</span>
                            </a>
                        </div>
                    </div>

                </div>
            </div>
        </div>
    </div>
</div>

@section scripts {
    <script>
        $(document).ready(function () {
            $('[data-bs-toggle="tooltip"]').tooltip();
        });
    </script>
}
