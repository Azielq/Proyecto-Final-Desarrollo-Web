
@{
    ViewData["Title"] = "Gestión de Inventario";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <!-- Migas de pan -->
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="@Url.Action("Index", "Home")">Inicio</a></li>
            <li class="breadcrumb-item active" aria-current="page">Inventario</li>
        </ol>
    </nav>

    <div class="card">
        <div class="card-header bg-primary text-white d-flex justify-content-between align-items-center">
            <h5 class="mb-0"><i class="fas fa-warehouse me-2"></i>Gestión de Inventario</h5>
            <a href="@Url.Action("Create", "Inventario")" class="btn btn-success">
                <i class="fas fa-plus me-2"></i>Nuevo Registro
            </a>
        </div>
        <div class="card-body">
            <!-- Filtros de búsqueda -->
            <div class="row mb-4">
                <div class="col-md-8">
                    <div class="input-group">
                        <input type="text" id="searchInventario" class="form-control" placeholder="Buscar por ubicación, ID...">
                        <button class="btn btn-primary" type="button" id="btnSearch">
                            <i class="fas fa-search"></i> Buscar
                        </button>
                    </div>
                </div>
                <div class="col-md-4">
                    <select class="form-select" id="filterUbicacion">
                        <option value="">Todas las ubicaciones</option>
                        <option value="bodega-a">Bodega A</option>
                        <option value="bodega-b">Bodega B</option>
                        <option value="bodega-c">Bodega C</option>
                    </select>
                </div>
            </div>

            <!-- Tabla de inventario -->
            <div class="table-responsive">
                <table class="table table-striped table-hover">
                    <thead>
                        <tr>
                            <th><i class="fas fa-hashtag me-1"></i>ID Inventario</th>
                            <th><i class="fas fa-box me-1"></i>ID Lote</th>
                            <th><i class="fas fa-map-marker-alt me-1"></i>Ubicación</th>
                            <th><i class="fas fa-cogs me-1"></i>Acciones</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.id_Inventario</td>
                                <td>@item.ID_Lote</td>
                                <td>@item.ubicacion</td>
                                <td>
                                    <div class="btn-group" role="group">
                                        <a href="@Url.Action("Details", "Inventario", new { id = item.id_Inventario })" class="btn btn-info btn-sm" data-bs-toggle="tooltip" title="Ver detalles">
                                            <i class="fas fa-eye"></i>
                                        </a>
                                        <a href="@Url.Action("Edit", "Inventario", new { id = item.id_Inventario })" class="btn btn-warning btn-sm" data-bs-toggle="tooltip" title="Editar">
                                            <i class="fas fa-edit"></i>
                                        </a>
                                        <a href="@Url.Action("Delete", "Inventario", new { id = item.id_Inventario })" class="btn btn-danger btn-sm" data-bs-toggle="tooltip" title="Eliminar">
                                            <i class="fas fa-trash"></i>
                                        </a>
                                        <a href="@Url.Action("MoverLote", "Inventario", new { id = item.id_Inventario })" class="btn btn-primary btn-sm" data-bs-toggle="tooltip" title="Mover Lote">
                                            <i class="fas fa-exchange-alt"></i>
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>

            <!-- Paginación -->
            <div class="row mt-3">
                <div class="col-md-6">
                    <nav aria-label="Paginación">
                        <ul class="pagination">
                            <li class="page-item disabled">
                                <a class="page-link" href="#" tabindex="-1" aria-disabled="true">Anterior</a>
                            </li>
                            <li class="page-item active"><a class="page-link" href="#">1</a></li>
                            <li class="page-item"><a class="page-link" href="#">2</a></li>
                            <li class="page-item"><a class="page-link" href="#">3</a></li>
                            <li class="page-item">
                                <a class="page-link" href="#">Siguiente</a>
                            </li>
                        </ul>
                    </nav>
                </div>
                <div class="col-md-6 text-end">
                    <div class="d-inline-flex align-items-center">
                        <label class="me-2">Mostrar:</label>
                        <select id="pageSizeSelector" class="form-select form-select-sm">
                            <option value="10">10</option>
                            <option value="25">25</option>
                            <option value="50">50</option>
                            <option value="100">100</option>
                        </select>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Modal de Detalle de Inventario -->
<div class="modal fade" id="detailsInventarioModal" tabindex="-1" aria-labelledby="detailsInventarioModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header bg-primary text-white">
                <h5 class="modal-title" id="detailsInventarioModalLabel"><i class="fas fa-warehouse me-2"></i>Detalles del Inventario</h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Cerrar"></button>
            </div>
            <div class="modal-body">
                <div id="inventarioDetailsContent">
                    <!-- Contenido cargado dinámicamente -->
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cerrar</button>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // Activar tooltips
        $(function () {
            $('[data-bs-toggle="tooltip"]').tooltip();

            // Abrir modal de detalles al hacer clic en el botón correspondiente
            $('.btn-info').click(function (e) {
                e.preventDefault();
                var url = $(this).attr('href');

                // Cargar los detalles del inventario en el modal
                $('#inventarioDetailsContent').load(url, function() {
                    $('#detailsInventarioModal').modal('show');
                });
            });
        });
    </script>
}