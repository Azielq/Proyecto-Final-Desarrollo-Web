@{
    ViewData["Title"] = "Crear Lote";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <!-- Migas de pan -->
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="@Url.Action("Index", "Home")">Inicio</a></li>
            <li class="breadcrumb-item"><a href="@Url.Action("Index", "Lotes")">Lotes</a></li>
            <li class="breadcrumb-item active" aria-current="page">Crear Lote</li>
        </ol>
    </nav>

    <div class="card">
        <div class="card-header bg-primary text-white">
            <h5 class="mb-0"><i class="fas fa-plus-circle me-2"></i>Crear Nuevo Lote</h5>
        </div>
        <div class="card-body">
            <form asp-action="Create" method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <div class="row mb-3">
                    <div class="col-md-6">
                        <div class="form-group">
                            <label asp-for="ID_Producto" class="form-label">
                                <i class="fas fa-barcode me-1"></i>ID Producto
                            </label>
                            <select asp-for="ID_Producto" class="form-select" asp-items="ViewBag.Productos">
                                <option value="">-- Seleccione un producto --</option>
                            </select>
                            <span asp-validation-for="ID_Producto" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="col-md-6">
                        <div class="form-group">
                            <label asp-for="cantidad" class="form-label">
                                <i class="fas fa-cubes me-1"></i>Cantidad
                            </label>
                            <input asp-for="cantidad" class="form-control" type="number" min="1" />
                            <span asp-validation-for="cantidad" class="text-danger"></span>
                        </div>
                    </div>
                </div>

                <div class="row mb-3">
                    <div class="col-md-6">
                        <div class="form-group">
                            <label asp-for="fecha_vencimiento" class="form-label">
                                <i class="fas fa-calendar-alt me-1"></i>Fecha de Vencimiento
                            </label>
                            <input asp-for="fecha_vencimiento" class="form-control" type="date" />
                            <span asp-validation-for="fecha_vencimiento" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="col-md-6">
                        <div class="form-group">
                            <label class="form-label">
                                <i class="fas fa-map-marker-alt me-1"></i>Ubicación Inicial
                            </label>
                            <select name="Ubicacion" class="form-select">
                                <option value="">-- Seleccione ubicación --</option>
                                <option value="Bodega A">Bodega A</option>
                                <option value="Bodega B">Bodega B</option>
                                <option value="Bodega C">Bodega C</option>
                            </select>
                        </div>
                    </div>
                </div>

                <div class="d-flex justify-content-end mt-4">
                    <a asp-action="Index" class="btn btn-secondary me-2">
                        <i class="fas fa-arrow-left me-1"></i>Volver
                    </a>
                    <button type="submit" class="btn btn-primary">
                        <i class="fas fa-save me-1"></i>Guardar
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    

    <script>
        // Script para validar que la fecha de vencimiento sea mayor a la fecha actual
        $(document).ready(function() {
            // Obtener la fecha actual en formato YYYY-MM-DD
            var today = new Date();
            var dd = String(today.getDate()).padStart(2, '0');
            var mm = String(today.getMonth() + 1).padStart(2, '0');
            var yyyy = today.getFullYear();
            today = yyyy + '-' + mm + '-' + dd;

            // Establecer la fecha mínima en el campo de fecha
            $('#fecha_vencimiento').attr('min', today);
        });
    </script>
}