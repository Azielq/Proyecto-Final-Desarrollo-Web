@{
    int currentPage = ViewBag.CurrentPage ?? 1;
    int totalPages = ViewBag.TotalPages ?? 1;
    string soloActivos = ViewBag.SoloActivos != null ? ViewBag.SoloActivos.ToString().ToLower() : "";
}

@if (totalPages > 1)
{
    <nav aria-label="Paginación de proveedores" class="mt-3">
        <ul class="pagination justify-content-center">

            <li class="page-item @(currentPage == 1 ? "disabled" : "")">
                <a class="page-link" href="@Url.Action("Index", new { page = currentPage - 1, soloActivos = soloActivos })">Anterior</a>
            </li>

            @for (int i = 1; i <= totalPages; i++)
            {
                <li class="page-item @(i == currentPage ? "active" : "")">
                    <a class="page-link" href="@Url.Action("Index", new { page = i, soloActivos = soloActivos })">@i</a>
                </li>
            }

            <li class="page-item @(currentPage == totalPages ? "disabled" : "")">
                <a class="page-link" href="@Url.Action("Index", new { page = currentPage + 1, soloActivos = soloActivos })">Siguiente</a>
            </li>

        </ul>
    </nav>
}


