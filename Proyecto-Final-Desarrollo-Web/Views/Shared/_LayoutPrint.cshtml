<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - FarmaU</title>
    @Styles.Render("~/Content/css")
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.0/font/bootstrap-icons.css" rel="stylesheet">
</head>
<body class="print-body">
    <!-- Barra superior solo visible en pantalla (no en impresión) -->
    <div class="no-print print-header">
        <div class="container">
            <div class="d-flex justify-content-between align-items-center py-2">
                <div class="d-flex align-items-center">
                    <div class="logo">
                        <h1 class="m-0">Farma<span>U</span></h1>
                    </div>
                    <h5 class="ms-3 mb-0 text-muted">| @ViewBag.Title</h5>
                </div>
                <div>
                    <button onclick="window.print()" class="btn btn-primary">
                        <i class="bi bi-printer"></i> Imprimir
                    </button>
                    <button onclick="window.close()" class="btn btn-secondary ms-2">
                        <i class="bi bi-x"></i> Cerrar
                    </button>
                    <a href="@Url.Action("Index", "Facturacion")" class="btn btn-outline-primary ms-2">
                        <i class="bi bi-arrow-left"></i> Volver
                    </a>
                </div>
            </div>
        </div>
    </div>

    <!-- Contenido principal con márgenes laterales -->
    <div class="print-container px-4">
        @RenderBody()
    </div>

    <!-- Footer solo visible en pantalla (no en impresión) -->
    <div class="no-print print-footer">
        <div class="container">
            <hr>
            <div class="text-center mb-3">
                <p class="text-muted small">
                    Este documento se generó el @DateTime.Now.ToString("dd/MM/yyyy HH:mm:ss") | FarmaU © @DateTime.Now.Year
                </p>
            </div>
        </div>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/libs")
    @RenderSection("scripts", required: false)
</body>
</html>