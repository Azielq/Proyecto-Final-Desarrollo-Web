@model Proyecto_Final_Desarrollo_Web.ViewModels.TiendaViewModel

@{
    ViewBag.Title = Model.TituloPagina;
}

<!-- Hero Section con Carousel -->
<section class="hero-slider mb-5">
    <div id="heroCarousel" class="carousel slide" data-bs-ride="carousel">
        <div class="carousel-indicators">
            <button type="button" data-bs-target="#heroCarousel" data-bs-slide-to="0" class="active" aria-current="true" aria-label="Slide 1"></button>
            <button type="button" data-bs-target="#heroCarousel" data-bs-slide-to="1" aria-label="Slide 2"></button>
            <button type="button" data-bs-target="#heroCarousel" data-bs-slide-to="2" aria-label="Slide 3"></button>
        </div>
        <div class="carousel-inner">
            <div class="carousel-item active">
                <div class="hero-slide" style="background: linear-gradient(135deg, #e8f5e9 0%, #e3f2fd 100%); padding: 80px 0;">
                    <div class="container">
                        <div class="row align-items-center">
                            <div class="col-md-6">
                                <div class="hero-content">
                                    <h1 class="display-4 fw-bold text-primary mb-3">Tu salud, nuestra prioridad</h1>
                                    <p class="lead mb-4">Descubre nuestro amplio catálogo de medicamentos y productos de cuidado personal con los mejores precios.</p>
                                    <a href="@Url.Action("Tienda", "Home")" class="btn btn-primary btn-lg">
                                        <i class="bi bi-shop me-2"></i>Visitar Tienda
                                    </a>
                                </div>
                            </div>
                            <div class="col-md-6 text-center">
                                <img src="~/Content/img/FarmaU.png" alt="FarmaU" class="img-fluid rounded shadow-lg" style="max-height: 350px;" />
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="carousel-item">
                <div class="hero-slide" style="background: linear-gradient(135deg, #f5e9e8 0%, #fde3e3 100%); padding: 80px 0;">
                    <div class="container">
                        <div class="row align-items-center">
                            <div class="col-md-6">
                                <div class="hero-content">
                                    <h1 class="display-4 fw-bold text-danger mb-3">Ofertas Especiales</h1>
                                    <p class="lead mb-4">Aprovecha nuestros descuentos exclusivos en productos seleccionados.</p>
                                    <a href="@Url.Action("Ofertas", "Home")" class="btn btn-danger btn-lg">
                                        <i class="bi bi-tags me-2"></i>Ver Ofertas
                                    </a>
                                </div>
                            </div>
                            <div class="col-md-6 text-center">
                                <img src="~/Content/img/Descuentos.png" alt="Ofertas FarmaU" class="img-fluid rounded shadow-lg" style="max-height: 350px;" />
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="carousel-item">
                <div class="hero-slide" style="background: linear-gradient(135deg, #e9f5ef 0%, #e3fdec 100%); padding: 80px 0;">
                    <div class="container">
                        <div class="row align-items-center">
                            <div class="col-md-6">
                                <div class="hero-content">
                                    <h1 class="display-4 fw-bold text-success mb-3">Nuevos Productos</h1>
                                    <p class="lead mb-4">Conoce los últimos lanzamientos en nuestra tienda.</p>
                                    <a href="@Url.Action("Nuevos", "Home")" class="btn btn-success btn-lg">
                                        <i class="bi bi-stars me-2"></i>Ver Novedades
                                    </a>
                                </div>
                            </div>
                            <div class="col-md-6 text-center">
                                <img src="~/Content/img/News-P.png" alt="Nuevos Productos" class="img-fluid rounded shadow-lg" style="max-height: 350px;" />
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <button class="carousel-control-prev" type="button" data-bs-target="#heroCarousel" data-bs-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Anterior</span>
        </button>
        <button class="carousel-control-next" type="button" data-bs-target="#heroCarousel" data-bs-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Siguiente</span>
        </button>
    </div>
</section>

<!-- Categorías Destacadas -->
<section class="categories-section py-5 bg-light">
    <div class="container">
        <div class="section-title text-center mb-5">
            <h2 class="fw-bold"><i class="bi bi-grid-3x3-gap me-2"></i>Categorías Destacadas</h2>
            <p class="text-muted">Explora nuestras principales categorías de productos</p>
        </div>

        <div class="row g-4">
            @foreach (var categoria in Model.Categorias)
            {
                <div class="col-md-4">
                    <div class="card h-100 border-0 shadow-sm category-card">
                        <div class="card-body text-center p-4">
                            <div class="category-icon mb-3">
                                <i class="bi bi-capsule display-4 text-primary"></i>
                            </div>
                            <h3 class="card-title h5 fw-bold">@categoria.Nombre</h3>
                            <p class="card-text text-muted">@(string.IsNullOrEmpty(categoria.Descripcion) ? $"Explora nuestra selección de {categoria.Nombre}" : categoria.Descripcion)</p>
                            <div class="mt-3">
                                <a href="@Url.Action("Tienda", "Home", new { filtro = new { CategoriaId = categoria.ID_Categoria } })" class="btn btn-outline-primary rounded-pill">
                                    Ver Productos <i class="bi bi-arrow-right ms-1"></i>
                                </a>
                            </div>
                        </div>
                        <div class="card-footer bg-white border-0 text-center">
                            <span class="badge bg-light text-dark">@categoria.CantidadProductos productos</span>
                        </div>
                    </div>
                </div>
            }
        </div>

        <div class="text-center mt-5">
            <a href="@Url.Action("Categorias", "Home")" class="btn btn-primary btn-lg">
                Ver Todas las Categorías <i class="bi bi-arrow-right-circle ms-2"></i>
            </a>
        </div>
    </div>
</section>

<!-- Productos Destacados -->
<section class="featured-products py-5">
    <div class="container">
        <div class="section-title text-center mb-5">
            <h2 class="fw-bold"><i class="bi bi-award me-2"></i>Productos Destacados</h2>
            <p class="text-muted">Los productos más populares en nuestra tienda</p>
        </div>
        <div class="row g-4">
            @foreach (var producto in Model.ProductosDestacados)
            {
                <div class="col-6 col-md-3">
                    <div class="card h-100 border-0 shadow-sm product-card">
                        <div class="position-relative">
                            <div class="image-container bg-light d-flex align-items-center justify-content-center p-2" style="height: 200px;">
                                <img src="@(string.IsNullOrEmpty(producto.UrlImagen) ? "/Content/images/product-placeholder.jpg" : producto.UrlImagen)"
                                     class="img-fluid" alt="@producto.Nombre"
                                     style="max-height: 100%; max-width: 100%; object-fit: contain;">
                            </div>

                            @if (producto.EsNuevo)
                            {
                                <span class="position-absolute top-0 start-0 badge bg-success m-2">Nuevo</span>
                            }

                            @if (producto.EsOferta)
                            {
                                <span class="position-absolute top-0 end-0 badge bg-danger m-2">-@(producto.PorcentajeDescuento * 100)%</span>
                            }
                        </div>
                        <div class="card-body p-3">
                            <h5 class="card-title product-title fw-bold mb-1">@producto.Nombre</h5>
                            <p class="card-text mb-1 small text-muted">@producto.Categoria</p>
                            <div class="d-flex justify-content-between align-items-center mt-2">
                                <div class="price-section">
                                    @if (producto.EsOferta)
                                    {
                                        <span class="text-decoration-line-through text-muted me-2">@producto.PrecioOriginal.ToString("C0")</span>
                                    }
                                    <span class="fw-bold text-primary">@producto.Precio.ToString("C0")</span>
                                </div>
                                <div class="rating">
                                    <i class="bi bi-star-fill text-warning"></i>
                                    <span class="ms-1">@producto.Valoracion</span>
                                </div>
                            </div>
                        </div>
                        <div class="card-footer bg-white border-0 p-3">
                            <div class="d-grid gap-2">
                                <a href="@Url.Action("DetalleProducto", "Home", new { id = producto.ID_Producto })" class="btn btn-outline-primary btn-sm">
                                    <i class="bi bi-eye me-1"></i>Ver Detalles
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>

        <div class="text-center mt-5">
            <a href="@Url.Action("Tienda", "Home")" class="btn btn-primary btn-lg">
                Ver Todos los Productos <i class="bi bi-arrow-right-circle ms-2"></i>
            </a>
        </div>
    </div>
</section>

<!-- Ofertas Especiales -->
<section class="special-offers py-5 bg-danger bg-opacity-10">
    <div class="container">
        <div class="section-title text-center mb-5">
            <h2 class="fw-bold text-danger"><i class="bi bi-tags me-2"></i>Ofertas Especiales</h2>
            <p class="text-muted">Aprovecha nuestros descuentos por tiempo limitado</p>
        </div>

        <div class="row g-4">
            @foreach (var oferta in Model.Ofertas)
            {
                <div class="col-md-6 col-lg-3">
                    <div class="card h-100 border-0 shadow-sm offer-card">
                        <div class="position-relative">
                            <div class="image-container bg-light d-flex align-items-center justify-content-center p-2" style="height: 200px;">
                                <img src="@(string.IsNullOrEmpty(oferta.UrlImagen) ? "/Content/images/product-placeholder.jpg" : oferta.UrlImagen)"
                                     class="img-fluid" alt="@oferta.Nombre"
                                     style="max-height: 100%; max-width: 100%; object-fit: contain;">
                            </div>
                            <div class="position-absolute top-0 end-0 bg-danger text-white p-2 m-2 rounded-pill">
                                <span class="fw-bold">-@(oferta.PorcentajeDescuento * 100)%</span>
                            </div>
                        </div>
                        <div class="card-body p-3">
                            <h5 class="card-title product-title fw-bold mb-1">@oferta.Nombre</h5>
                            <p class="card-text mb-1 small text-muted">@oferta.Categoria</p>
                            <div class="mt-2">
                                <span class="text-decoration-line-through text-muted me-2">@oferta.PrecioOriginal.ToString("C0")</span>
                                <span class="fw-bold text-danger fs-5">@oferta.Precio.ToString("C0")</span>
                            </div>
                        </div>
                        <div class="card-footer bg-white border-0 p-3">
                            <div class="d-grid gap-2">
                                <a href="@Url.Action("DetalleProducto", "Home", new { id = oferta.ID_Producto })" class="btn btn-danger btn-sm">
                                    <i class="bi bi-eye me-1"></i>Ver Detalles
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>

        <div class="text-center mt-5">
            <a href="@Url.Action("Ofertas", "Home")" class="btn btn-danger btn-lg">
                Ver Todas las Ofertas <i class="bi bi-arrow-right-circle ms-2"></i>
            </a>
        </div>
    </div>
</section>

<!-- Nuevos Productos -->
<div class="row g-4">
    @foreach (var producto in Model.NuevosProductos.Take(4))
    {
        <div class="col-md-6 col-lg-3">
            <div class="card h-100 border-0 shadow-sm new-product-card">
                <div class="position-relative">
                    <div class="image-container bg-light d-flex align-items-center justify-content-center p-2" style="height: 200px;">
                        <img src="@(string.IsNullOrEmpty(producto.UrlImagen) ? "/Content/images/product-placeholder.jpg" : producto.UrlImagen)"
                             class="img-fluid" alt="@producto.Nombre"
                             style="max-height: 100%; max-width: 100%; object-fit: contain;">
                    </div>
                    <div class="position-absolute top-0 start-0 bg-success text-white p-2 m-2 rounded-pill">
                        <span class="fw-bold">Nuevo</span>
                    </div>
                </div>
                <div class="card-body p-3">
                    <h5 class="card-title product-title fw-bold mb-1">@producto.Nombre</h5>
                    <p class="card-text mb-1 small text-muted">@producto.Categoria</p>
                    <div class="mt-2">
                        <span class="fw-bold text-success fs-5">@producto.Precio.ToString("C0")</span>
                    </div>
                </div>
                <div class="card-footer bg-white border-0 p-3">
                    <div class="d-grid gap-2">
                        <a href="@Url.Action("DetalleProducto", "Home", new { id = producto.ID_Producto })" class="btn btn-success btn-sm">
                            <i class="bi bi-eye me-1"></i>Ver Detalles
                        </a>
                    </div>
                </div>
            </div>
        </div>
    }
</div>

        <div class="text-center mt-5">
            <a href="@Url.Action("Nuevos", "Home")" class="btn btn-success btn-lg">
                Ver Todos los Nuevos Productos <i class="bi bi-arrow-right-circle ms-2"></i>
            </a>
        </div>
    </div>
</section>

<!-- Ventajas de FarmaU -->
<section class="features-section py-5 bg-light">
    <div class="container">
        <div class="section-title text-center mb-5">
            <h2 class="fw-bold"><i class="bi bi-shield-check me-2"></i>¿Por qué elegirnos?</h2>
            <p class="text-muted">Descubre las ventajas de comprar en FarmaU</p>
        </div>

        <div class="row g-4">
            <div class="col-md-4">
                <div class="card h-100 border-0 shadow-sm feature-card text-center p-4">
                    <div class="feature-icon mx-auto mb-3">
                        <i class="bi bi-truck display-4 text-primary"></i>
                    </div>
                    <div class="card-body">
                        <h4 class="card-title fw-bold">Envío Rápido</h4>
                        <p class="card-text text-muted">Recibe tus productos en menos de 24 horas en zonas urbanas.</p>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card h-100 border-0 shadow-sm feature-card text-center p-4">
                    <div class="feature-icon mx-auto mb-3">
                        <i class="bi bi-shield-check display-4 text-primary"></i>
                    </div>
                    <div class="card-body">
                        <h4 class="card-title fw-bold">Calidad Garantizada</h4>
                        <p class="card-text text-muted">Todos nuestros productos son originales y cuentan con garantía.</p>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card h-100 border-0 shadow-sm feature-card text-center p-4">
                    <div class="feature-icon mx-auto mb-3">
                        <i class="bi bi-headset display-4 text-primary"></i>
                    </div>
                    <div class="card-body">
                        <h4 class="card-title fw-bold">Atención Personalizada</h4>
                        <p class="card-text text-muted">Nuestro equipo de profesionales está disponible para ayudarte.</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- Llamado a la acción -->
<section class="cta-section py-5 bg-primary text-white text-center">
    <div class="container py-4">
        <h2 class="display-5 fw-bold mb-4">¿Listo para cuidar tu salud?</h2>
        <p class="lead mb-4">Explora nuestra amplia selección de productos y aprovecha nuestras ofertas exclusivas.</p>
        <a href="@Url.Action("Tienda", "Home")" class="btn btn-light btn-lg px-5">
            <i class="bi bi-shop me-2"></i>Visitar Tienda
        </a>
    </div>
</section>

@section scripts {
    <script>
        $(document).ready(function() {
            // Inicializa el carrusel con configuración personalizada
            $('#heroCarousel').carousel({
                interval: 5000,
                pause: 'hover'
            });

            // Animación de elementos al hacer scroll
            $(window).scroll(function() {
                $('.feature-card, .category-card, .product-card, .offer-card, .new-product-card').each(function() {
                    var position = $(this).offset().top;
                    var scroll = $(window).scrollTop();
                    var windowHeight = $(window).height();

                    if (scroll + windowHeight > position + 100) {
                        $(this).addClass('shadow');
                    }
                });
            });
        });
    </script>
}