@{
    ViewBag.Title = "Productos";
}

<h2 class="text-center my-4">Cuidado Personal</h2>

<div class="container">
    <div class="row">
        @foreach (var cuidadoPersonal in Model)
        {
            <div class="col-md-4 mb-4">
                <div class="card shadow-sm">
                    <class ="card-img-top" alt="@cuidadoPersonal.Nombre">
                        <div class="card-body">
                            <h5 class="card-title">@cuidadoPersonal.Nombre</h5>
                            <p class="card-text text-muted">@cuidadoPersonal.Descripcion</p>
                            <p class="card-text font-weight-bold">@cuidadoPersonal.Precio.ToString("C")</p>
                            <div class="d-flex justify-content-between align-items-center">
                                <select class="form-select w-50">
                                    <option>1</option>
                                    <option>2</option>
                                    <option>3</option>
                                </select>
                                <button class="btn btn-primary">
                                    <i class="fas fa-shopping-cart"></i> Agregar
                                </button>
                            </div>
                        </div>
                </div>
            </div>
        }
    </div>
</div>

<style>
    .card {
        border-radius: 10px;
        overflow: hidden;
    }

        .card img {
            height: 200px;
            object-fit: cover;
        }
</style>

<script src="https://kit.fontawesome.com/a076d05399.js" crossorigin="anonymous"></script>
